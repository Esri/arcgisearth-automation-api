<Window x:Class="ArcGISEarth.AutoAPI.Examples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ArcGISEarth.AutoAPI.Examples"
        Title="ArcGISEarth.AutoAPI.Examples" Height="620" Width="800" ResizeMode="CanMinimize">
    <Window.DataContext>
        <!--Use MainWindowViewModel as the window data context-->
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="380"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,10,20,0">
            <!-- Automation API url -->
            <TextBlock Margin="20,0,0,0" Text="Automation API Url" VerticalAlignment="Center"/>
            <TextBox Margin="140,0,0,0" Text="{Binding APIUrl}" Padding="2,2,0,0" Width="540" Height="24" HorizontalAlignment="Left"/>
            <Button Margin="0,0,0,0" Command="{Binding ResetCommand}" Content="Reset" Width="60" Height="24" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,26,0,0" >
                <!-- Function type -->
                <Button Margin="0,10,0,0" Command="{Binding GetCameraCommand}" Content="Get Camera"/>
                <Button Margin="0,10,0,0" Command="{Binding SetCameraCommand}" Content="Set Camera"/>
                <Button Margin="0,10,0,0" Command="{Binding SetFlightCommand}" Content="Set Flight"/>
                <Button Margin="0,10,0,0" Command="{Binding AddLayerCommand}" Content="Add Layer"/>
                <Button Margin="0,10,0,0" Command="{Binding GetLayerCommand}" Content="Get Layer"/>
                <Button Margin="0,10,0,0" Command="{Binding RemoveLayerCommand}" Content="Remove Layer"/>
                <Button Margin="0,10,0,0" Command="{Binding ClearLayersCommand}" Content="Clear Layers"/>
                <Button Margin="0,10,0,0" Command="{Binding GetWorkspaceCommand}" Content="Get Workspace"/>
                <Button Margin="0,10,0,0" Command="{Binding SetWorkspaceCommand}" Content="Set Workspace"/>
                <Button Margin="0,10,0,0" Command="{Binding ClearWorkspaceCommand}" Content="Clear Workspace"/>
                <Button Margin="0,10,0,0" Command="{Binding GetSnapshotCommand}" Content="Get Snapshot"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0" Grid.Column="1">
                <!-- Input data -->
                <TextBlock Margin="0,10,0,0" Text="Input"/>
                <TextBox  Margin="0,10,0,0" Height="320" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="{Binding InputString}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2"  Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,26,0,0">
                <!-- Function type -->
                <Button Margin="0,10,0,0" Command="{Binding ClearInputBoxCommand}" Content="Clear Input Box"/>
                <Button Margin="0,10,0,0" Command="{Binding ClearOutputBoxCommand}" Content="Clear Output Box"/>
                <Button Margin="0,10,0,0" Command="{Binding HelpCommand}" Content="Help"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0" Grid.Column="1">
                <!-- Output data -->
                <TextBlock Margin="0,10,0,0" Text="Output"/>
                <TextBox  Margin="0,10,0,0" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="{Binding OutputString}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
